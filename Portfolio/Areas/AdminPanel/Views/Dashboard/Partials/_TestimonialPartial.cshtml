@using Portfolio.ViewModels
@model PortfolioViewModel

<div class="section-box mt-4" id="testimonial">
    <div class="row align-items-center">
        <div class="col-6">
            <h6 style="
											font-family: Permanent Marker, cursive;
											font-weight: 400;
											font-style: normal;
                                        "
                class="title-heading mb-0"
                data-backdrop-text="Testimonial">
                What People Say
            </h6>
        </div>
        <div class="col-6 text-end">
            <!-- Slider Navigation -->
            <div class="button-circle button-circle-sm button-circle-outline swiper-custom-prev">
                <i class="bi bi-arrow-left"></i>
            </div>
            <div class="button-circle button-circle-sm button-circle-outline swiper-custom-next">
                <i class="bi bi-arrow-right"></i>
            </div>
            <!-- end Slider Navigation -->
        </div>
    </div>
    <!-- end row -->
    <div class="swiper testimonial-swiper mt-4">
        <div class="swiper-wrapper">
            <!-- Swiper item 1 -->
           @foreach (var item in Model.testimonial)
            {
                <div class="swiper-slide">
                    <div class="testimonial-box">
                        <div class="d-block text-yellow mb-3">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                        </div>
                        <p style="
													font-family: Baskervville SC, serif;
													font-weight: 400;
													font-style: normal;
                                                    ">
                            @item.Text
                        </p>
                    </div>
                    <div class="d-flex align-items-center mt-3">
                        <div class="d-inline-block me-3">
                            <img class="img-mask-avatar-sm"
                                 src="@item.PPurl"
                                 alt=""
                                 data-rjs="2" />
                        </div>
                        <div class="d-inline-block">
                            <h5 class="fw-medium m-0 line-height-140">
                                @item.Name
                            </h5>
                            <span class="font-small fw-normal"> @item.Profession</span>
                        </div>
                    </div>
                </div>
                <a class="btn btn-primary" asp-action="EditTestimonial" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger" asp-action="DeleteTestimonial" asp-route-id="@item.Id">Delete</a>
            }
          
        </div>
        <a class="btn btn-success" asp-action="CreateTestimonial">Create</a>
        <!-- end swiper-wrapper -->
    </div>
    <!-- end swiper -->
</div>
<!-- end section-box -->