@using Portfolio.ViewModels
@model PortfolioViewModel

<div class="toggle-menu">
    <!-- Close button -->
    <button class="toggle-close">
        <i class="bi bi-x"></i>
    </button>
    <!-- end Close button -->
    @foreach (var item in Model.toggleEntities)
    {
        <h6 class="mono-heading fw-normal mb-2">Phone:</h6>
        <h4 class="fw-medium">@item.Number</h4>
        <div class="mt-4">
            <h6 class="mono-heading fw-normal mb-2">Email:</h6>
            <h4 class="fw-medium"> @item.Email</h4>
            <ul class="list-inline-sm mt-3">
                <li>
                    <a class="button-circle button-circle-sm" href="@item.WhatsApp">
                        <i class="bi bi-whatsapp"></i>
                    </a>
                </li>
                <li>
                    <a class="button-circle button-circle-sm" href="@item.Instagram">
                        <i class="bi bi-instagram"></i>
                    </a>
                </li>
                <li>
                    <a class="button-circle button-circle-sm" href="@item.Telegram">
                        <i class="bi bi-telegram"></i>
                    </a>
                </li>

            </ul>
            <a class="btn btn-primary" asp-action="EditToggle" asp-route-id="@item.Id">Edit</a>
        </div>
    }
    
    <div class="tm-bottom">
        <p>&copy; 2023 FlaTheme.</p>
    </div>
</div>