<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditBlog</h1>

@model BlogEntity
<form method="post">
    <div class="container">
        <div>
            <label>Image</label>
            <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Text">

        </div>
        <div>
            <label>Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Text">

        </div>
        <div>
            <label>Data</label>
            <input type="text" class="form-control" asp-for="Data" placeholder="Text">

        </div>
        <div>
            <label>Description</label>
            <input type="text" class="form-control" asp-for="Description" placeholder="Text">

        </div>
        <div>
            <label>Href</label>
            <input type="text" class="form-control" asp-for="Href" placeholder="Text">

        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>