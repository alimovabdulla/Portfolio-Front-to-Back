@using FluentEmail.Core.Models

@{
    ViewData["Title"] = "SendEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model EmailData
<h1>SendEmail</h1>

<form asp-action="SendEmail" method="post" id="contactform">
    <div class="row gx-3 gy-0">
        <div class="col-12 col-md-6">
            <input asp-for=Subject type="text"
                   id="name"
                   name="name"
                   placeholder="Name"
                   required />
        </div>
        <div   class="col-12 col-md-6">
            <input asp-for=Subject type="email"
                   id="email"
                   name="email"
                   placeholder="E-Mail"
                   required />
        </div>
    </div>
    <input asp-for=Subject type="text"
           id="subject"
           name="subject"
           placeholder="Subject"
           required />
    <textarea asp-for="Subject" name="message"
              id="message"
              placeholder="Message"></textarea>
    <button class="button button-md" type="submit">
        Send Message
    </button>
</form>